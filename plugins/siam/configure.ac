# SIAM Torrus plugin Autoconf script

AC_INIT(tp-siam, 2.01.02dev, ssinyagin@users.sourceforge.net)
AC_CONFIG_AUX_DIR(conftools)
AC_CANONICAL_HOST
AM_INIT_AUTOMAKE(1.9)

AC_PATH_PROG(PERL, perl, no)
AC_PATH_PROG(SED, sed, no)


AC_ARG_ENABLE(pkgonly,
        [AC_HELP_STRING([--enable-pkgonly],
                                [Skip all checking])])

perllibdirs="\'\${perllibdir}\'"

PERLOPTS=
AC_ARG_VAR(PERLINC,  [[] Additional space-separated Perl library paths])
if test ! -z "$PERLINC"; then
   for d in $PERLINC; do
       PERLOPTS="${PERLOPTS} -I${d}"
       perllibdirs=${perllibdirs}"\,\'"${d}"\'"
   done
fi
                                
        
# Check the necessary Perl modules
# This is the example of AutoLoader search, which is always in Perl
# distribution anyway

if test "$enable_pkgonly" != yes; then
  AC_MSG_CHECKING([environment variables])
  if test -z "$pkghome" -o -z "$sitedir"; then
    AC_MSG_ERROR([Missing mandatory environment variables]);
  else
    AC_MSG_RESULT([Ok])
  fi

  for module in 'YAML' 'SIAM'
   do
     AC_MSG_CHECKING([presence of $module])
     if ${PERL} ${PERLOPTS} -e 'use '$module 2>/dev/null; then
         AC_MSG_RESULT([Ok])
     else
         AC_MSG_ERROR([Perl cannot find $module]);
     fi
   done
   
fi

AC_SUBST(perllibdirs, [${perllibdirs}])

        
